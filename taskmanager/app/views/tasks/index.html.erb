<% @tasks.each do |task| %>
  <h2><%= task.name %></h2>
  <p><%= task.difficulty %></p>
  <p><%= task.comment %></p>
  <%= link_to "Check it out", task_path(task) %>
  <%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

<p><%= link_to "Create new task", new_task_path %></p>
